# Logstash - log-consumer input
#   -  Pulling from RabbitMQ
#   -  this config File  <%= @configfile %>
#   -  this config file lives in <%= @config_dir %>
#
#
input {
  rabbitmq {
    host => "<%= @rabbit_address %>"
    port => 5671
    vhost => "lr-hare"
    exchange => "logstash"
    queue => "log-item"
    exchange_type => "topic"
    durable => "true"
    key => "<%= @passkey %>"
    user => "logstash"
    password => "<%= @password %>"
    ssl => true
    ssl_certificate_path => "<%= @ssl_dir %>/<%= @rabbit_p12 %>"
    ssl_certificate_password => ""
  }
}


